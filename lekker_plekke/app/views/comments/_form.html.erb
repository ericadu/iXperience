<%= form_for([@place, @place.comments.build], remote: true, html: {class: "form-inline"}) do |f| %>
  <div class="form-group">
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter, class: "form-commenter form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :text %><br>
    <%= f.text_area :text, class: "form-comment form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>